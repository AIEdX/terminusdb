{ '@type' : 'sys:context',
  '@base' : 'http://my.database.endpoint/foo/schema#',
  'sys' : '...',
  'type' : '...',
  'doc' : '...' }

{ '@id' : 'User',
  '@type' : 'sys:Class',
  'key_hash' : 'type:string',
  'capability' : { '@type' : 'sys:Set',
                   '@class' : 'Capability' } }

{ '@id' : 'Resource',
  '@type' : 'sys:Class' }

{ '@id' : 'Organization',
  '@type' : 'sys:Class',
  '@inherits' : 'Resource',
  'name' : 'type:string',
  'child' : { '@type' : 'sys:Set',
              'sys:class' : 'Organization' },
  'database' : { '@type' : 'sys:Set',
                 '@class' : 'Database' } }

{ '@id' : 'Role',
  '@type' : 'sys:Class',
  'name' : 'type:string',
  'action' : { '@type' : 'sys:Set',
               '@class' : 'Action' } }

{ '@id' : 'Capability',
  '@type' : 'sys:Class',
  'name' : 'type:string',
  'action' : { '@type' : 'sys:Set',
               '@class' : 'Action' } }

{ '@id' : 'Capability'
  '@type' : 'sys:Class',
  '@key' : { '@type' : 'sys:ValueHash' },
  'scope' : 'Resource',
  'role' : { '@type' : 'sys:Set',
             '@class' : 'Role' } }

{ '@id' : 'Action',
  '@type' : 'sys:Enum',
  '@value' : [ "create_database",
               "delete_database",
               "class_frame",
               "clone",
               "fetch",
               "push",
               "branch",
               "rebase",
               "instance_read_access",
               "instance_write_access",
               "schema_read_access",
               "schema_write_access",
               "meta_read_access",
               "meta_write_access",
               "commit_read_access",
               "commit_write_access",
               "manage_capabilities" ] }

{ '@id' : 'SystemDatabase',
  '@type' : 'sys:Class',
  '@inherits' : 'Resource' }

{ '@id' : 'Database',
  '@type' : 'sys:Class',
  '@inherits' : 'Resource' }

{ '@id' : 'DatabaseState',
  '@type' : 'sys:Enum',
  '@value' : [ "deleting",
               "finalized" ] }

